# Database Configuration
# Used by docker-compose.yml for PostgreSQL container
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_db
POSTGRES_PORT=5432

# Redis Configuration
# Used by docker-compose.yml for Redis container
REDIS_PORT=6379
# Redis connection URL for application
REDIS_URL=redis://localhost:6379

# Database Connection URL
# Used by Drizzle ORM and drizzle-kit for database connection
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/app_db

# Next.js Public URL (for ISR/SSG)
NEXT_PUBLIC_URL=http://localhost:3000

